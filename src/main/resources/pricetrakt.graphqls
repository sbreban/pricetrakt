type Query {
    # The API Version
    version: String!
}

type Product {
    id: ID!
    name: String!
    shopEntries: [ShopEntry]!
    prices: [Price]!
}

type Price {
    price: Float!
    currency: String!
}

type Shop {
    id: ID!
    name: String!
}

type ShopEntry {
    productId: String!
    shopId: String!
    url: String!
}

extend type Query {
    getProductById(id: ID!) : Product
}